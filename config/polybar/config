;=====================================================
;
;   To learn more about how to configure Polybar
;   go to https://github.com/jaagr/polybar
;
;   The README contains alot of information
;
;=====================================================

[colors]
background = #000
background-alt = #444
foreground = #fff
foreground-alt = #33cc33
primary = #ffb52a
secondary = #e60053
alert = #f00

[bar/l7ssha]
monitor = ${env:MONITOR:HDMI-0}
width = 100%
height = 22

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #f00

padding-left = 0
padding-right = 1

module-margin-left = 0
module-margin-right = 2

font-0 = DejaVu Sans:pixelsize=10;0
font-2 = FontAwesome:pixelsize=10;1

modules-left = mpd
modules-center =
modules-right = system-uptime-pretty updates-arch-combined pulseaudio-simple memory cpu date

tray-position = right
tray-padding = 0
cursor-click = pointer
cursor-scroll = ns-resize

[module/mpd]
type = internal/mpd
format-online = <label-song>
host = 127.0.0.1
port = 1337

label-song-maxlen = 40
;label-song-ellipsis = true

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "CPU "
format = <label> <ramp-coreload>
format-prefix-foreground = ${colors.foreground-alt}
label = %percentage:2%%

ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █

[module/memory]
type = internal/memory
interval = 2
format = <label>

format-prefix = "RAM "
format-prefix-foreground = ${colors.foreground-alt}
label = %gb_used%/%gb_total%

[module/date]
type = internal/date
interval = 5

date = " %d-%m-%Y"
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix =
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #0a6cf5

label = %date% %time%

[module/pulseaudio-simple]
type = custom/script
format-prefix = "Vol "
format-prefix-foreground = ${colors.foreground-alt}
exec = ~/.config/polybar/pulseaudio-simple.sh
interval = 3

[module/updates-arch-combined]
type = custom/script
format-prefix = "Updates "
format-prefix-foreground = ${colors.foreground-alt}
exec = ~/.config/polybar/updates-arch-combined.sh
interval = 600

[module/system-uptime-pretty]
type = custom/script
format-prefix = "Uptime  "
format-prefix-foreground = ${colors.foreground-alt}
exec = ~/.config/polybar/system-uptime-pretty.sh
interval = 30

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 0
margin-bottom = 0
