<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">
	<menu id="system-menu" label="System">
		<item label="lxappearance">
			<action name="Execute">
				<execute>lxappearance</execute>
			</action>
		</item>
		<item label="Openbox Configuration Manager">
			<action name="Execute">
				<command>obconf</command>
				<startupnotify>
					<enabled>yes</enabled>
				</startupnotify>
			</action>
		</item>
		<separator/>
		<item label="Reconfigure Openbox">
			<action name="Reconfigure"/>
		</item>
	</menu>
	<menu id="root-menu" label="Openbox 3">
    <item label="Sakura">
			<action name="Execute">
        <execute>sakura</execute>
			</action>
		</item>
    <item label="Vivaldi">
			<action name="Execute">
        <execute>vivaldi-snapshot</execute>
			</action>
		</item>
		<menu id="system-menu"/>
		<item label="Log Out">
			<action name="Exit">
				<prompt>Are you sure?</prompt>
			</action>
		</item>
    <item label="Restart">
			<action name="Execute">
				<prompt>Are you sure?</prompt>
        <execute>shutdown -r now</execute>
			</action>
		</item>
     <item label="Gimme some rest!">
			<action name="Execute">
				<prompt>Are you sure?</prompt>
        <execute>shutdown now</execute>
			</action>
		</item>
	</menu>
</openbox_menu>
